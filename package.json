{
  "name": "defi-learning-portfolio",
  "version": "1.0.0",
  "description": "Professional DeFi learning portfolio showcasing smart contract implementations and frontend applications",
  "private": true,
  "workspaces": [
    "contracts/*",
    "frontend/*"
  ],
  "scripts": {
    "build:all": "npm run build --workspaces",
    "test:all": "npm run test --workspaces",
    "compile:all": "npm run compile --workspaces",
    "clean": "rm -rf node_modules contracts/*/node_modules frontend/*/node_modules",
    "install:all": "npm install && npm run install --workspaces"
  },
  "keywords": [
    "defi",
    "ethereum",
    "solidity",
    "smart-contracts",
    "blockchain",
    "web3",
    "amm",
    "dex",
    "stablecoin",
    "yield-vault",
    "lending"
  ],
  "author": "Yiannis Chen",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/defi-learning-portfolio.git"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=8.0.0"
  },
  "devDependencies": {
    "hardhat": "^2.26.2"
  },
  "dependencies": {
    "@chainlink/contracts": "^1.3.0"
  }
}
